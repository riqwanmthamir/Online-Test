
<div class="wrapper">


		<div class="col-md-2">
		</div>

		<div class="login-box col-md-8">
			<h1>New Question</h1>
		    
		    <form class="form-horizontal" role="form" action="/questions" method="post">

		  		<div class="form-group">
		    		<label for="inputEmail3" class="col-sm-3 control-label">Question</label>
		    		<div class="col-sm-9">
		     			<input type="text" class="form-control" id="inputEmail3" placeholder="Register No." name="question">
		    		</div>
		  		</div>
		  		
		  		<div class="form-group">
				    <label for="inputPassword3" class="col-sm-3 control-label">Choice a</label>
				    <div class="col-sm-9">
				      	<input type="text" class="form-control" id="inputPassword3" placeholder="Password" name="a">
				    </div>
				</div>

				<div class="form-group">
				    <label for="inputPassword3" class="col-sm-3 control-label">Choice b</label>
				    <div class="col-sm-9">
				      	<input type="text" class="form-control" id="inputPassword3" placeholder="Password" name="b">
				    </div>
				</div>

				<div class="form-group">
				    <label for="inputPassword3" class="col-sm-3 control-label">Choice c</label>
				    <div class="col-sm-9">
				      	<input type="text" class="form-control" id="inputPassword3" placeholder="Password" name="c">
				    </div>
				</div>

				<div class="form-group">
				    <label for="inputPassword3" class="col-sm-3 control-label">Choice d</label>
				    <div class="col-sm-9">
				      	<input type="text" class="form-control" id="inputPassword3" placeholder="Password" name="d">
				    </div>
				</div>

				<div class="form-group">
				    <label for="inputPassword3" class="col-sm-3 control-label">Answer</label>
				    <div class="col-sm-9">
				      	<select name="result">
						  	<option value="a">a</option>
						  	<option value="b">b</option>
						  	<option value="c">c</option>
						  	<option value="d">d</option>		  
						</select>
				    </div>
				</div>

				<div class="form-group">
				    <label for="inputPassword3" class="col-sm-3 control-label">Test</label>
				    <div class="col-sm-9">
				      
				    	
					<select name="test_id">
				    	<% @test.each do |test| %>

						  	<option value="<%= test.id %>"><%= test.test_name %></option>
						<% end %>
						  
					</select>


				    </div>
				</div>
		  
			  	<div class="form-group">
			    	<div class="col-sm-offset-3 col-sm-10">
			      		<div clas="col-md-4">
			     			<button type="submit" class="btn btn-primary">Post Question</button>
						</div>
		    		</div>
		  		</div>
			</form>
		</div>
	</div>
